<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextCoord1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Coordenadas 1 (latitud, longitud)"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextCoord2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCoord1"
        android:layout_marginTop="16dp"
        android:hint="Coordenadas 2 (latitud, longitud)"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextCoord3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCoord2"
        android:layout_marginTop="16dp"
        android:hint="Coordenadas 3 (latitud, longitud)"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCoord3"
        android:layout_marginTop="16dp"
        android:text="Guardar Coordenadas"
        android:onClick="saveCoordinates" />

</RelativeLayout>
